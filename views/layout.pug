//- layout.pug

doctype html
html
  head
    meta(charset='utf-8')
    viewport(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
    description(content='Stop updating your Instagram link, using iglink.co your biography link will be always updated with the link of your last post')
    author(content='iglink.co')
    meta(property='og:type' content='website')
    meta(property='og:image' content='http://iglink.co/public/assets/img/og_image.jpg')
    meta(property='og:description' content='Stop updating your Instagram link, using iglink.co your biography link will be always updated with the link of your last post')
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' rel='stylesheet' type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:300,400,700' rel='stylesheet' type='text/css')
    link(href='./public/assets/css/app.css' rel='stylesheet' type='text/css')
    script(src='./public/assets/js/analytics.js')
    block title
      title iglink
      meta(property='og:title' content='iglink')
      meta(property='og:site_name' content='iglink')

  body
    block content

    footer(class='text-center p-t-20')
      | #{lang.created_with_lots_of}
      span(class='emoji') ❤️
      b #{lang._iglink_team}
      | #{lang.copyright}

    script(src='https://code.jquery.com/jquery-3.1.1.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')

    block scripts
