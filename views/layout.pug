//- layout.pug

doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(http-equiv="Content-Type" content="text/html")
    meta(name='viewport' content='user-scalable=yes, maximum-scale=2.5,width=device-width')
    meta(name='lang' content='es')
    meta(name='description' content='Sácale partido a tu Instagram. Lleva tu estrategia de Marketing en Instagram al siguente nivel, permitiendo que tus clientes exploren tu marca yendo más allá de tu perfil. Basicamente el link que le falta a Instagram.')

    meta(name='og:type' content='website')
    meta(name='og:image' content='http://iglink.co/public/assets/img/og_image.jpg')
    meta(name='og:description' content='Sácale partido a tu Instagram. Lleva tu estrategia de Marketing en Instagram al siguente nivel, permitiendo que tus clientes exploren tu marca yendo más allá de tu perfil. Basicamente el link que le falta a Instagram.')
    meta(name='og:site_name' content='iglink')

    meta(name='twitter:site' content='@iglinkco')
    meta(name='twitter:url' content='http://iglink.co')
    meta(name='twitter:image' content='http://iglink.co/public/assets/img/og_image.jpg')

    link(href='./public/assets/img/favicon.png' rel='shortcut icon' type='image/png')

    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' rel='stylesheet' type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:300,400,700' rel='stylesheet' type='text/css')
    link(href='./public/assets/css/app.css' rel='stylesheet' type='text/css')

    script(src='./public/assets/js/analytics.js')

    block title
      title iglink
      meta(name='title' content='iglink')
      meta(name='og:title' content='iglink')

  body
    block content

    footer(class='text-center p-y-20')
      | #{lang.created_with_lots_of}
      span(class='emoji') ❤️
      | por
      b #{lang._iglink_team}
      | #{lang.copyright}

    script(src='https://code.jquery.com/jquery-3.1.1.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')

    block scripts
