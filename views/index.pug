//- index.pug
extends layout.pug

block title
  title #{lang.iglink}

block content
  div(class='container-fluid' id='main-container')
    div(class='row text-white p-y-150')
      div(class='col-md-12 text-center')
        img(src='/public/assets/img/logo.png')
        h1 #{lang.iglink_co}
        h2 #{lang.Stop_updating_your_Instagram_link}
        h4 #{lang.using_iglink_co_your_biography_link_will_be_always_updated}
        h4 #{lang.with_the_link_of_your_last_post}
        div(class='row p-t-20')
          div(class='col-md-12 text-center height-150')
            form(id='create-form')
              div(class='row')
                div(class='col-md-4 col-md-offset-4')
                  div(class='input-group input-group-iglink')
                    span(class='input-group-addon') @
                    input(type='username' class='form-control' id='username' placeholder='' + lang.Instagram_acount)
                  input(type='submit' class='btn btn-primary btn-block' value='' + lang.Create_your_link)
            div(id='result-form' class='hidden')
              p(id='result-iglink')
                | http://iglink.co/
                span(id='username')
              div(class='row')
                div(class='col-md-4 col-md-offset-4')
                  a(id='result-copy-button' data-clipboard-text='' href='javascript:void(0);' class='btn btn-success btn-block') #{lang.Copy_your_link}
                  div(class='p-t-20')
                    a(id='reset-form' href='javascript:void(0)' class='text-white') #{lang.Create_another_link}
block scripts
  script(src='https://cdn.jsdelivr.net/clipboard.js/1.5.16/clipboard.min.js')
  script(src='/public/assets/js/app.js')
